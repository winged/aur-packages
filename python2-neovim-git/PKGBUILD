# Maintainer: David Vogt <dave at winged dot ch>
# This PKGBUILD is maintained at https://github.com/winged/aur-packages

pkgname=python2-neovim-git
_pkgname=python2-neovim-git
pkgver=0.r176.388b3ee
pkgrel=1
pkgdesc="Python client to neovim, git version. Use this to keep up with neovim-git"
arch=('any')
license=('MIT')
url=('http://github.com/neovim/python-client')
depends=('python2'
         'python2-pyuv'
         'python2-msgpack'
         'python2-greenlet')
conflicts=(
  'python2-neovim'
)
makedepends=('python2-setuptools')
source=("$pkgname::git://github.com/neovim/python-client.git"
        "LICENSE::https://raw.githubusercontent.com/neovim/python-client/0.0.7/LICENSE-MIT")
sha256sums=('SKIP' 'b6788f5bf3308da11c3fa9a34f05919383d1643b84cf2fda132ed9fac4c8cbcd')

pkgver() {
  cd "${_pkgname}"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$_pkgname"
  python2 setup.py install --root="$pkgdir"
  install -Dm644 ../LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
